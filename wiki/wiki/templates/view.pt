<html metal:use-macro="load: project:templates/layout.pt">
<span tal:fill-slot="subtitle">${page.name} - </span>

<div metal:fill-slot="content">
    <p>${structure: content}</p>
    <p>
        <a href="${structure: edit_url}">
            Edit this page
        </a>
    </p>
    <p>
        Viewing <strong>${page.name}</strong>, created by <strong>${page.creator.name}</strong>.
    </p>
    <p>You can return to the
        <a href="${request.route_url('view_page', pagename='FrontPage')}">FrontPage</a>.
    </p>
</div>

</html>