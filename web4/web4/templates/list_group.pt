<div metal:use-macro="load: layout.pt">
  <div metal:fill-slot="content">
    <a tal:attributes="href string:${request.route_url('group-create')}">Create</a> |
    <table padding="0" cellspacing="0" border="1" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Group Name</th>
          <th>Description</th>
          <th>Member Count</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr tal:repeat="row rows">
          <td><span tal:content="row.group_name">Group Name</span></td>
          <td><span tal:content="row.description">Description</span></td>
          <td><span tal:content="row.member_count">Member Count</span></td>
          <td>
            <a tal:attributes="href string:${request.route_url('group-read', id=row.id)}">Read</a> |
            <a tal:attributes="href string:${request.route_url('group-update', id=row.id)}">Update</a> |
            <a tal:attributes="href string:${request.route_url('group-delete', id=row.id)}">Delete</a>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>