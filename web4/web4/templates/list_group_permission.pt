<div metal:use-macro="load: layout.pt">
  <div metal:fill-slot="content">
    <a tal:attributes="href string:${request.route_url('group-permission-create')}">Create</a> |
    <table padding="0" cellspacing="0" border="1" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Group ID</th>
          <th>Group Name</th>
          <th>Permission</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr tal:repeat="row rows">
          <td><span tal:content="row.group_id">Group ID</span></td>
          <td><span tal:content="row.groups.group_name">Group Name</span></td>
          <td><span tal:content="row.perm_name">Permission</span></td>
          <td>
            <a tal:attributes="href string:${request.route_url('group-permission-read', id=row.group_id)}">Read</a> |
            <a tal:attributes="href string:${request.route_url('group-permission-update', id=row.group_id)}">Update</a>
            |
            <a tal:attributes="href string:${request.route_url('group-permission-delete', id=row.group_id)}">Delete</a>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>